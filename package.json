{
    "private": true,
    "type": "module",
    "scripts": {
        "build:js": "node ./bin/build.js",
        "dev:js": "node ./bin/build.js -dev",
        "build:css": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/filament-menu.css",
        "dev:css": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/filament-menu.css --watch",
        "dev": "concurrently -n js,css \"npm:dev:js\" \"npm:dev:css\"",
        "build": "npm run build:js && npm run build:css"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.11",
        "autoprefixer": "^10.4.19",
        "concurrently": "^8.2.2",
        "esbuild": "^0.25.8",
        "postcss": "^8.4.38",
        "tailwindcss": "^4.1.11"
    }
}
